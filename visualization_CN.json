{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": {
    "text": "Immigration Trend for China (2011-2015)",
    "fontSize": 18,
    "font": "Arial",
    "anchor": "start",
    "color": "#333"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/zxuu0105/FIT3179Ass2/refs/heads/main/1datasource-9Areas.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Country === 'China'"},
    {
      "fold": ["2011", "2012", "2013", "2014", "2015"],
      "as": ["Year", "Immigration"]
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "Immigration",
          "type": "quantitative",
          "title": "Immigration Count"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Immigration", "type": "quantitative"},
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {
            "field": "Immigration",
            "type": "quantitative",
            "title": "Immigration Count"
          }
        ]
      }
    }
  ],
  "config": {"axis": {"labelFontSize": 12, "titleFontSize": 14}}
}