{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar chart showing immigration numbers by state for selected year.",
  "width": 1200,
  "height": 1200,
  "data": {
    "url": "https://raw.githubusercontent.com/zxuu0105/FIT3179Ass2/refs/heads/main/datasource-auTotal.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": ["2011", "2012", "2013", "2014", "2015"],
      "as": ["Year", "Immigration"]
    },
    {"filter": "datum.Year == year_select"}
  ],
  "params": [
    {
      "name": "year_select",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2015,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {"labelAngle": 45}
    },
    "y": {
      "field": "Immigration",
      "type": "quantitative",
      "title": "Immigration Count",
      "scale": {"domain": [0, 180000]}
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Year", "type": "nominal", "title": "Year"},
      {
        "field": "Immigration",
        "type": "quantitative",
        "title": "Immigration Count"
      }
    ]
  },
  "config": {"axis": {"labelFontSize": 12, "titleFontSize": 14}}
}
