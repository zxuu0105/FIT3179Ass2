{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 1000,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/zxuu0105/3179wk9Homework/refs/heads/main/ne_10m.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zxuu0105/3179wk9Homework/refs/heads/main/datasource-au.csv",
          "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["2011", "2012", "2013", "2014", "2015"]
      }
    },
    {
      "fold": ["2011", "2012", "2013", "2014", "2015"],
      "as": ["Year", "Immigration"]
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Immigration",
      "type": "quantitative",
      "scale": {"scheme": "blues", "domain": [0, 200000]}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {
        "field": "Immigration",
        "type": "quantitative",
        "title": "Immigration No"
      }
    ],
    "opacity": {
      "condition": {
        "param": "year_select",
        "value": 1
      },
      "value": 0.2
    }
  },
  "params": [
    {
      "name": "year_select",
      "select": {
        "type": "point",
        "fields": ["Year"]
      },
      "bind": {
        "input": "select",
        "options": ["2011", "2012", "2013", "2014", "2015"],
        "name": "Select Year: "
      },
      "value": "2015"
    }
  ],
  "config": {}
}
