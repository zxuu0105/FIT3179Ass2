{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart showing immigration trends from 2011 to 2015 for each Australian state, with data points on the lines.",
  "data": {
    "url": "https://raw.githubusercontent.com/zxuu0105/FIT3179Ass2/refs/heads/main/datasource-auTotal.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": ["2011", "2012", "2013", "2014", "2015"],
      "as": ["Year", "Immigration"]
    }
  ],
  "width": 800,
  "height": 800,
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": 0}
        },
        "y": {
          "field": "Immigration",
          "type": "quantitative",
          "title": "Number of Immigrants",
          "scale": {"domain": [0, 180000]}
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "legend": {"orient": "right", "labelFontSize": 13}
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {
            "field": "Immigration",
            "type": "quantitative",
            "title": "Immigration Count"
          }
        ]
      }
    },
    {
      "mark": "point",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Immigration", "type": "quantitative"},
        "color": {"field": "State", "type": "nominal"}
      }
    }
  ],
  "config": {"axis": {"labelFontSize": 14, "titleFontSize": 16, "grid": true}}
}